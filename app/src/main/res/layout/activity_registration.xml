<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgview_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_trlogo"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"
            android:fontFamily="serif"
            android:text="Registration Form"
            android:textColor="@color/colorPrimary"
            android:textSize="20dip"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/bg_gray_corner_circular"
                android:gravity="center"
                android:padding="2dip">

                <ImageView
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:background="@mipmap/ic_user" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etuname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:textColorHint="@color/dark_blue"
                    android:typeface="serif">

                    <EditText
                        android:id="@+id/txtUser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:focusable="true"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:hint="User Name"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/main_grey"
                        android:textSize="16dip" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/bg_gray_corner_circular"
                android:gravity="center"
                android:padding="2dip">

                <ImageView
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:background="@mipmap/ic_email" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:textColorHint="@color/dark_blue"
                    android:typeface="serif">

                    <EditText
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:hint="Email"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/main_grey"
                        android:textSize="16dip" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/bg_gray_corner_circular"
                android:gravity="center"
                android:padding="2dip">

                <ImageView
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:background="@mipmap/ic_desigs" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etdesig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:textColorHint="@color/dark_blue"
                    android:typeface="serif">

                    <EditText
                        android:id="@+id/txtDegination"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:hint="Designation"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/main_grey"
                        android:textSize="16dip" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/bg_gray_corner_circular"
                android:gravity="center"
                android:padding="2dip">

                <ImageView
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:background="@mipmap/ic_user" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:textColorHint="@color/dark_blue"
                    android:typeface="serif">

                    <EditText
                        android:id="@+id/txtHod"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:hint="HOD Name"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/main_grey"
                        android:textSize="16dip" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/bg_gray_corner_circular"
                android:gravity="center"
                android:padding="2dip">

                <ImageView
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:background="@mipmap/ic_id" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/eteid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:textColorHint="@color/dark_blue"
                    android:typeface="serif">

                    <EditText
                        android:id="@+id/txtEid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:hint="Employee Id"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/main_grey"
                        android:textSize="16dip" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/bg_gray_corner_circular"
                android:gravity="center"
                android:padding="2dip">

                <ImageView
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:background="@mipmap/ic_project" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etproject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:textColorHint="@color/dark_blue"
                    android:typeface="serif">

                    <EditText
                        android:id="@+id/txtProject"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:hint="Project Assign"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/main_grey"
                        android:textSize="16dip" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="250dip"
                android:layout_height="48dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dip"
                android:background="@drawable/btn_orange"
                android:fontFamily="serif"
                android:text="Register Me"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dip" />

            <Button
                android:id="@+id/btngoback"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:fontFamily="serif"
                android:paddingLeft="5dp"
                android:text="Already Register ?"
                android:textAllCaps="false"
                android:textColor="@color/color_12"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
