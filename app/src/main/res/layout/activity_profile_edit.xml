<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_7">
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip">

            <!-- start row one -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/userNameLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/recycle_rect"
                    android:paddingLeft="0dip">


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/input_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:drawableLeft="@drawable/ic_user"
                            android:textColorHint="@color/skyblue"
                            android:textSize="16dip"
                            android:enabled="false"
                            android:gravity="center_vertical"
                            android:inputType="text"
                            android:hint="Name"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dip">
                        <EditText
                            android:id="@+id/input_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textColorHint="@color/skyblue"
                            android:drawableLeft="@drawable/ic_email"
                            android:textSize="16dip"
                            android:hint="Employe ID"
                            android:enabled="false"
                            android:inputType="textMultiLine|textEmailAddress"
                            android:gravity="center_vertical"/>
                    </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/input_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textColorHint="@color/skyblue"
                    android:drawableLeft="@drawable/ic_mobile"
                    android:textSize="16dip"
                    android:hint="Mobile number"
                    android:enabled="false"
                    android:inputType="phone"
                    android:layout_marginTop="2dip"
                    android:gravity="center_vertical"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/input_oldpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textColorHint="@color/skyblue"
                    android:drawableLeft="@mipmap/ic_lock"
                    android:textSize="16dip"
                    android:hint="Old Password"
                    android:inputType="text"
                    android:layout_marginTop="2dip"
                    android:gravity="center_vertical"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/input_newpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textColorHint="@color/skyblue"
                    android:drawableLeft="@mipmap/ic_lock"
                    android:textSize="16dip"
                    android:hint="New Password"
                    android:inputType="text"
                    android:layout_marginTop="2dip"
                    android:gravity="center_vertical"/>
            </com.google.android.material.textfield.TextInputLayout>
                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="180dip"
                        android:layout_height="45dip"
                        android:text="Update Password"
                        android:textColor="@color/white"
                        android:textSize="16dip"
                        android:textAllCaps="false"
                        android:layout_margin="20dip"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/btn_black"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/recycle_rect"
                android:orientation="vertical">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textColorHint="@color/skyblue"
                    android:drawableLeft="@drawable/ic_division"
                    android:textSize="16dip"
                    android:text="Division"
                    android:maxLines="3"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/input_division"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_7"
                    android:textColorHint="@color/skyblue"
                    android:textSize="10dip"
                    android:hint="Division"
                    android:maxLines="6"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"/>

                <!-- end edit Bio row -->
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textColorHint="@color/skyblue"
                    android:drawableLeft="@drawable/ic_division"
                    android:textSize="16dip"
                    android:text="Depot"
                    android:maxLines="3"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/input_depo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_7"
                    android:textColorHint="@color/skyblue"
                    android:textSize="10dip"
                    android:hint="Depot"
                    android:maxLines="6"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dip"
                    android:gravity="center_vertical"/>

                <!-- button save -->
                <Button
                    android:id="@+id/btnSave_div"
                    android:layout_width="180dip"
                    android:layout_height="45dip"
                    android:text="Update"
                    android:textColor="@color/white"
                    android:textSize="16dip"
                    android:textAllCaps="false"
                    android:layout_margin="20dip"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_black"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
