<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:padding="10dp"
        android:orientation="horizontal"
       >

        <TextView
            android:id="@+id/txt_sr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:hint="sr no"
            android:textColor="@color/headerColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:hint="Date"
            android:gravity="center"
            android:textColor="@color/headerColor"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="horizontal">
            <TextView
            android:id="@+id/txt_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Count"
            android:gravity="center"
            android:drawableRight="@drawable/ic_navigate_next_black_24dp"
            android:textColor="@color/headerColor"
            android:textSize="16sp" />

           <!-- <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_navigate_next_black_24dp" />-->

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">
        <TextView
            android:id="@+id/txt_install"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Installed"

            android:textColor="@color/headerColor"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/txt_uninstall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="uninstalled"
            android:textColor="@color/headerColor"
            android:textSize="16sp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">
        <TextView
            android:id="@+id/txt_maintance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Maintaince"
            android:textColor="@color/headerColor"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/txt_replace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Replace"
            android:textColor="@color/headerColor"
            android:textSize="16sp" />
    </LinearLayout>

    </LinearLayout>
</LinearLayout>