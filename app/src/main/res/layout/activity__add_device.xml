<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rtl.vts_technician.Activity_AddDevice">

    <include layout="@layout/layout_toolbar"
        android:id="@+id/tools"
        />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrb"
        android:layout_below="@+id/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imgview_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_trlogo"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device Entry Form"
                android:textColor="@color/colorPrimary"
                android:textSize="20dip"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dip"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/bg_gray_corner_circular"
                    android:gravity="center"
                    android:padding="2dip">

                    <ImageView
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:background="@mipmap/ic_user"/>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/etdevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:textColorHint="@color/dark_blue"
                        android:typeface="serif">
                        <EditText
                            android:id="@+id/txtDeviceId"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="Device Id"
                            android:fontFamily="serif"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="@color/main_grey"
                            android:textSize="16dip"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/bg_gray_corner_circular"
                    android:gravity="center"
                    android:padding="2dip">

                    <ImageView
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:background="@mipmap/ic_dob"/>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/etdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:textColorHint="@color/dark_blue"
                        android:typeface="serif">
                        <EditText
                            android:id="@+id/txtDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="Date"
                            android:fontFamily="serif"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="@color/main_grey"
                            android:textSize="16dip"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/bg_gray_corner_circular"
                    android:gravity="center"
                    android:padding="2dip">

                    <ImageView
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:background="@mipmap/ic_track_now"/>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/etLoca"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:textColorHint="@color/dark_blue"
                        android:typeface="serif">
                        <EditText
                            android:id="@+id/txtLocation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="Your Location"
                            android:fontFamily="serif"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="@color/main_grey"
                            android:textSize="16dip"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/bg_gray_corner_circular"
                    android:gravity="center"
                    android:padding="2dip">

                    <ImageView
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:background="@mipmap/ic_user"/>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/ethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:textColorHint="@color/dark_blue"
                        android:typeface="serif">
                        <EditText
                            android:id="@+id/txtHod"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="HOD Name"
                            android:fontFamily="serif"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="@color/main_grey"
                            android:textSize="16dip"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/bg_gray_corner_circular"
                    android:gravity="center"
                    android:padding="2dip">

                    <ImageView
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:background="@mipmap/ic_vechiles"/>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/etvehno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:textColorHint="@color/dark_blue"
                        android:typeface="serif">
                        <EditText
                            android:id="@+id/txtVehicleNo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="Vehicle No."
                            android:fontFamily="serif"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="@color/main_grey"
                            android:textSize="16dip"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
               <!-- <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dip"
                    android:layout_marginLeft="8dip"
