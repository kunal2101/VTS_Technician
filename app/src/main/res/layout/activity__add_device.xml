                    android:layout_marginTop="10dip"
                    android:background="@drawable/bg_gray_corner_circular"
                    android:gravity="center"
                    android:padding="2dip">

                    <ImageView
                        android:layout_width="35dip"
                        android:layout_height="35dip"
