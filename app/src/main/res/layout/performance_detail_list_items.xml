<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3F6F8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_sr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:typeface="serif"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textColor="#216BB5"
                    android:text="xxxx"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/header_color"
                    android:text=")"/>

                <TextView
                    android:id="@+id/txt_tech_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/headerColor"
                    android:text="xxxxxxxxxxx"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/headerColor"
               />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="2dp"

                    android:layout_below="@+id/row_one"
                    android:paddingBottom="2dip">

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Install :"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/mdtp_button_color"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/bahamas"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/txt_install"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:typeface="serif"
                                    android:layout_marginLeft="5dip"
                                    android:text="xxxxxx"
                                    android:textStyle="bold"
                                    android:textColor="@color/headerColor"
                                    android:textSize="12dp"/>
                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="3dip">
                                <TextView
                                    android:text="Manitenance :"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/mdtp_button_color"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/bahamas"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/txt_maintain"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="xxxxxx"
                                    android:typeface="serif"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="5dip"
                                    android:textColor="@color/headerColor"
                                    android:textSize="12dip"/>
                            </TableRow>
                        </TableLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="De-install :"
                                    android:fontFamily="@font/bahamas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/mdtp_button_color"
                                    android:textSize="12dp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/txt_deinstall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="5dip"
                                    android:typeface="serif"
                                    android:text="xxxxxx"
                                    android:textStyle="bold"
                                    android:textColor="@color/headerColor"
                                    android:textSize="12dip"/>
                            </TableRow>

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Replace :"
                                    android:fontFamily="@font/bahamas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/mdtp_button_color"
                                    android:textSize="12dp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/txt_replace"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="5dip"
                                    android:typeface="serif"
                                    android:textStyle="bold"
                                    android:text="xxxxxx"
                                    android:textColor="@color/headerColor"
                                    android:textSize="12dip"/>
                            </TableRow>
                        </TableLayout>

                    </RelativeLayout>

                </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/headerColor"
                android:layout_marginTop="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:background="@color/colorPrimary"
                >
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:layout_marginRight="10dp"
                    >
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:text="Total :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:layout_marginLeft="5dp"
                            android:typeface="serif"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/txt_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="xxxxxx"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:textColor="@color/white"
                            android:textSize="12dp"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>


        </LinearLayout>
</androidx.cardview.widget.CardView>
