<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.rtl.vts_technician.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="120dip"
            android:layout_height="100dip"
            android:background="@drawable/ic_msrtc"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/colorPrimary"
            android:textSize="20dip"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/bg_gray_corner_circular"
            android:gravity="center"
            android:padding="2dip">

            <ImageView
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:background="@mipmap/ic_user"/>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etuname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColorHint="@color/dark_blue"
                android:typeface="serif">
                <EditText
                    android:id="@+id/txtUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="User Name"
                    android:fontFamily="serif"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/main_grey"
                    android:textSize="16dip"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/bg_gray_corner_circular"
            android:gravity="center"
            android:padding="2dip">

            <ImageView
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:background="@mipmap/ic_lock"/>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColorHint="@color/dark_blue"
                android:typeface="serif">

                <EditText
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:hint="Password"
                    android:fontFamily="serif"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/main_grey"
                    android:textSize="16dip" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="250dip"
            android:layout_height="48dip"
            android:fontFamily="serif"
            android:background="@drawable/btn_orange"
            android:layout_marginTop="20dip"
            android:textColor="@color/white"
            android:textSize="18dip"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:text="Login"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            >

            <Button
                android:id="@+id/btnReg"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="New User ?"
                android:background="@null"
                android:textSize="12sp"
                android:fontFamily="serif"
                android:textColor="@color/color_12"
                android:textStyle="bold" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary" />

            <Button
                android:textAllCaps="false"
                android:id="@+id/btnForget"
                android:fontFamily="serif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:background="@null"
                android:text="Forget Password?"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/color_12"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
